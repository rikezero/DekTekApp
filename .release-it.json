{
  "git": {
    "requireCleanWorkingDir": true,
    "commit": true,
    "tag": true,
    "tagName": "${version}",
    "tagAnnotation": "Release ${version}",
    "push": true
  },
  "github": {
    "release": false,
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "header": "# DekTek Changelog\n\nAll notable changes are listed below.",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "BREAKING CHANGE",
            "section": "‚ö†Ô∏è Major Changes"
          },
          {
            "type": "refactor",
            "section": "‚ö†Ô∏è Major Changes"
          },
          {
            "type": "fix",
            "section": "üêõ Bug Fixes"
          },
          {
            "type": "hotfix",
            "section": "üêõ Bug Fixes"
          },
          {
            "type": "feat",
            "section": "‚ú® New Features"
          },
          {
            "type": "docs",
            "section": "üõ†Ô∏è Miscellaneous"
          },
          {
            "type": "style",
            "section": "üõ†Ô∏è Miscellaneous"
          },
          {
            "type": "test",
            "section": "üõ†Ô∏è Miscellaneous"
          },
          {
            "type": "chore",
            "section": "üõ†Ô∏è Miscellaneous"
          }
        ]
      },
      "writerOpts": {
        "commitPartial": "- {{type}}: {{subject}} ({{hash}})\n"
      }
    }
  }
}