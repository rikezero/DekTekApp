# .github_changelog_generator

# Define categories in the desired order
categories:
  - title: "Fixes"
    labels:
      - "hotfix"
      - "fix"
  - title: "Features"
    labels:
      - "feat"
  - title: "Miscellaneous"
    labels:
      - "refactor"
      - "style"
      - "test"
      - "docs"
      - "chore"

# Optional: Set the main title of the changelog
title: "Changelog"

# Optional: Specify the starting version
starting_version: "0.0.1"

# Enable inclusion of commits that are not part of PRs
include_commits: true

# Optional: Customize date format
date_format: "%Y-%m-%d"
